extends testLayout

block content
    table(class="gridtable")
        tr
            th ID
            th User Name
            th Avatar Url
            th Password
            th Role
            th Email
            th Age
            th
            th
        each item in users
            tr
                td 
                    a(href="/details/" + item.id) #{item.id}
                td #{item.userName}
                td #{item.avaterUrl}
                td #{item.password}
                td #{item.role}
                td #{item.email}
                td #{item.age}
                td
                    a(href="/edit/" + item.id) Edit
                td 
                    a(href="/delete/" + item.id) Delete

    p 
        a(href="/create/") Add new person