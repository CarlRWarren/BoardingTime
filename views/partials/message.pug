//- item
if (!item.editing)
    div(id="message")
        div(class="userBox")
            img(class='messageImg',src=item.avatarurl)
            p=item.username
            p=(item.time.getMonth()+1)+'/'+item.time.getDate()+'/'+item.time.getFullYear()
        div(class="messageBox")
            p=item.message
            if session.user && ((item.username == session.user.username) || session.user.isAdmin)
                a(href="/deletemessage/"+item.id)
                    button
                        text="Delete"
            if session.user && (item.username == session.user.username)
                a(href="/editmessage/"+item.id)
                    button
                        text="Edit"
else
    //form here
    div(id="messageEdit")
        div(class="userBox")
            img(class='messageImg',src=item.avatarurl)
        div(class="messageBox")
           form(id='messageForm', method='post', action='/editmessage/'+item.id, class="message")
                label Message:
                br
                input(type='text', name='message')
                br
                input(type='submit', value='submit')
