extends Layout

block content
    table(class="gridtable")
        tr
            th ID
            th User Name
            th Avatar Url
            th Password
            th Role
            th Email
            th Age
            th
            th
        each item in users
            tr
                td 
                    a(href="/details/" + item.id) #{item.id}
                include partials/head.pug
                td
                    a(href="/edit/" + item.id) Edit
                td 
                    a(href="/delete/" + item.id) Delete

    p 
        a(href="/create/") Add new person